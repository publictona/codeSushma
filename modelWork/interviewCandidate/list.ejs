        <script>

            var DrawTableInquiry;
            //  test()
            $(document).ready(function () {

                var dataColumns = [
                    {
                        data: "_id",
                        sTitle: "Id",
                        visible: false
                    },

                    {
                        data: "tranNo",
                        sTitle: "Sr#",
                        visible: true,
                        className: "fs14--design column-5",


                    },

                    {
                        data: "candidateName",
                        sTitle: "Candidate Name#",
                        visible: true,
                        className: "col-form-label fs13--design column-100",

                        render: function (data, type, row) {
                            //console.log(row);
                            var html =
                                ' <a style="color:purple" data-id="' + row
                                    ._id +
                                '" onclick="getUser(this) ">' + row.candidateName + '</a>';
                            return html;
                        }

                    },

                    {
                        data: "DOB",
                        sTitle: "DOB#",
                        visible: true,
                        className: "col-form-label fs13--design column-22",

                    },


                    {
                        data: "age",
                        sTitle: "Age#",
                        visible: true,
                        className: "fs14--design column-7",

                    },

                    {
                        data: "mobile",
                        sTitle: "Mobile#",
                        visible: true,
                        className: "fs14--design column-12",


                    },

                    {
                        data: "email",
                        sTitle: "Email#",
                        visible: true,
                        className: "fs14--design column-12",

                    },

                    {
                        data: "experience",
                        sTitle: "Exp#",
                        visible: true,
                        className: "fs14--design column-10",

                    },

                    {
                        data: "currentlyWorking",
                        sTitle: "Is Working#",
                        visible: true,
                        className: "fs14--design column-12",

                    },

                    {
                        data: "interviewDt",
                        sTitle: "Interview Dt#",
                        visible: true,
                        className: "fs14--design column-12",
                        // render: function (data, type, row) {

                        //     var html = "";
                        //     return dateFormat(row.validTo);
                        // }

                    },

                    {
                        data: "comfiramtion",
                        sTitle: "Is Confirm#",
                        visible: true,
                        className: "fs14--design column-12",

                    },

                    {
                        data: "joiningDt",
                        sTitle: "Joining Dt#",
                        visible: true,
                        className: "fs14--design column-12",
                        // render: function (data, type, row) {
                        //      var html = "";
                        //     return dateFormat(row.joiningDt);
                        // }

                    },

                    {
                        data: "isActive",
                        sTitle: "Is Active#",
                        visible: true,
                        className: "fs14--design",

                    },

                    {
                        data: "uploadFile",
                        sTitle: "Resume",
                        visible: true,
                        className: "fs13--design text-danger column-12",
                        render: function (data, type, row) {
                            return '<a href="' + row.uspImg + '" target="_blank"> Resume</a>';
                        }
                    },

                    {
                        data: "remark",
                        sTitle: "Remark#",
                        visible: true,
                        className: "fs14--design column-12",

                    },



                ];

                DrawTableInquiry = DrawCustomDataTable("uspList", 350,
                    "/route/interviewCandidateFeedback/grid-data", dataColumns, [
                    [0, "asc"]
                ], "frm_grid_search", null, true, true);

                $("#frm_grid_search").validate({
                    errorPlacement: function (error, element) { },
                    submitHandler: function (form) {
                        DrawTableInquiry.ajax.reload();
                    }
                });
                $('.textUpper').on('keyup', function (e) {
                    $(this).val($(this).val().toUpperCase());
                });

                $("form#regForm").submit(function (e) {
                    //$('#newUserBox').modal('hide');
                    e.preventDefault();
                });

                $("#regForm").validate({
                    rules: {
                        //  candidateName: "required",

                    },
                    messages: {
                        // title: "Package Category is required",
                    },

                    errorPlacement: function (error, element) {
                        offset = element.offset();
                        error.insertAfter(element)
                        error.addClass('message');
                        error.css('display', 'block!important');
                        error.css('color', 'red');
                    },

                    submitHandler: function (form) {

                        $('#newUserBox').modal('hide');
                        var $form = $(form);
                        var formData = $form.serializeObject();

                        var method = "post";
                        var url = "/route/interviewCandidateFeedback/create";
                        //console.log("formDataformDataformData",formData);
                        if (formData.id != 0) {
                            url =
                                '/route/interviewCandidateFeedback/update/' +
                                formData.id;
                            method = "put";
                        }
                        $.ajax({
                            url: url,
                            type: method,
                            contentType: "application/json; charset=utf-8",
                            data: JSON.stringify(formData),
                            dataType: "json",

                            success: function (result) {
                                console.log("resultresult", result)
                                if (result.status) {
                                    notification({
                                        type: "success",
                                        message: result
                                            .msg
                                    });

                                    DrawTableInquiry.ajax.reload();
                                }
                            }
                        });
                    }
                });
            });

            function addNewUser() {
                $('#newUserBox').modal('show');
                $("#regForm")[0].reset();
                // $("#formTitle").text("Add Ticket");  // Update form title to Add Entry
                $("#masId").val(0);  // Ensure the ID is set to 0 for new entries
            }

            function populate(frm, data) {
                $.each(data, function (key, value) {
                    $('[name=' + key + ']', frm).val(value);
                });
                $('.sector').select2();
            }



            function getUser(id) {
                var id = id.getAttribute('data-id');
                $.ajax({
                    url: "/route/interviewCandidateFeedback/getData",
                    type: "get",
                    data: {
                        id: id
                    },
                    success: function (result) {

                        var tranNo = '&nbsp;&nbsp;&nbsp;&nbsp;Tran No :- ' + result.data.tranNo;
                        $("#topTRANNO").html(tranNo);

                        var iddata = {
                            id: result.data._id
                        }
                        $.when($('#regForm').populate(result.data)).done(function (x) {

                        });
                        $("#fromDt").select2();
                        // $("#Place").select2();


                        // ------
                        populate('#regForm', result.data);
                        populate('#regForm', iddata);

                        $('#newUserBox').modal('show');

                    }
                })
            }

            function openNav() {
                document.getElementById("mySidenav").style.width = "250px";
            }

            function closeNav() {
                document.getElementById("mySidenav").style.width = "0";
            }


            $(document).on("change", ".upload_img", function () {
                var $this = $(this);
                var file_data = $(this).prop("files")[0];
                var form_data = new FormData();
                form_data.append("path", "interviewCandidateFeedback");
                form_data.append("file", file_data);
                $.ajax({
                    url: "/route/upload/aws",
                    type: 'post',
                    data: form_data,
                    cache: false,
                    enctype: 'multipart/form-data',
                    processData: false,
                    contentType: false,
                    success: function (result) {
                        // console.log(result);
                        var data = JSON.stringify(result);
                        data = JSON.parse(data);
                        if (data.url) {
                            $('.uspImg').val(data.url)
                        }
                    }, error: function (jqXHR, textStatus, errorThrown) {
                        var result = jQuery.parseJSON(jqXHR.responseText);
                        $(".custom_error").html(result.message);
                    }
                });
            });

            $(document).on("change", ".upload_imgMobile", function() {
          //alert("hi");
          var $this = $(this);
          var name = $(this).attr("name");
          var file_data = $(this).prop("files")[0]; // Getting the properties of file from file field
          var form_data = new FormData(); // Creating object of FormData class
          form_data.append("path", 'interviewCandidateFeedback'); // Adding extra parameters to form_data

          form_data.append("file", file_data); // Appending parameter named file with properties of file_field to form_data
          $("#" + name + "_loader").html("Loading...");
          $.ajax({
              url: "/route/upload/aws",
              type: 'post',
              // dataType: 'json',
              data: form_data,
              cache: false,
              enctype: 'multipart/form-data',
              processData: false, // tell jQuery not to process the data
              contentType: false, // tell jQuery not to set contentType
              success: function(result) {
                console.log("resultmultipart", result)
                  var data = JSON.stringify(result);
                  data = JSON.parse(data);
                  console.log("resultmultipartdata", data)
                  if (data.url) {
                      if ((data.url).indexOf('https') > -1) {} else {
                          data.url = data.url.replace(/http/g, 'https');
                      }
                      $("#" + name + "_input").val(data.url);
                      $("#" + name + "_img").html('<a href="' + data.url + '" target="_new"><img src="' + data.url + '" width="50" height="50"></a>');
                      $("#" + name + "_loader").html('');
                  }
              },
              error: function(jqXHR, textStatus, errorThrown) {
                var result = jQuery.parseJSON(jqXHR.responseText);
                $(".custom_error").html(result.message);
              }
          });
      });

            function test() {
                DrawTableInquiry.ajax.reload();
            }



        </script>
