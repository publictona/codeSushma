                    visible: true,
                    className: "fs14--design",

                },

                {
                    data: "HTL_VOU",
                    sTitle: "HTL_VOU#",
                    visible: true,
                    className: "fs14--design",

                },

                {
                    data: "VOPT1",
                    sTitle: "VOPT1#",
                    visible: true,
                    className: "fs14--design",

                },

                {
                    data: "VOPT2",
                    sTitle: "VOPT2#",
                    visible: true,
                    className: "fs14--design",

                },


                {
                    data: "VISA1",
                    sTitle: "VISA1#",
                    visible: true,
                    className: "fs14--design",

                },

                {
                    data: "VISA2",
                    sTitle: "VISA2#",
                    visible: true,
                    className: "fs14--design",

                },


                {
                    data: "VISA3",
                    sTitle: "VISA3#",
                    visible: true,
                    className: "fs14--design",

                },

                {
                    data: "VISA4",
                    sTitle: "VISA4#",
                    visible: true,
                    className: "fs14--design",

                },

                {
                    data: "VISA5",
                    sTitle: "VISA5#",
                    visible: true,
                    className: "fs14--design",

                },

                {
                    data: "VISA6",
                    sTitle: "VISA6#",
                    visible: true,
                    className: "fs14--design",

                },


                {
                    data: "VISA_FEE",
                    sTitle: "Action",
                    visible: true,
                    render: function (data, type, row) {
                        //console.log(row);
                        var html =
                            ' <span class="btn btn-primary btn-block" data-id="' + row
                                ._id +
                            '" onclick="getUser(this) "> Edit</span>';
                        return html;
                    }
                },

                ];

                DrawTableInquiry = DrawCustomDataTable("uspList", 350,
                    "/route/consulateVisaRequired/grid-data", dataColumns, [
                    [0, "asc"]
                ], "frm_grid_search", null, true, true);

                $("#frm_grid_search").validate({
                    errorPlacement: function (error, element) { },
                    submitHandler: function (form) {
                        DrawTableInquiry.ajax.reload();
                    }
                });
                $('.textUpper').on('keyup', function (e) {
                    $(this).val($(this).val().toUpperCase());
                });

                $(".textarea").wysihtml5();

                $("form#regForm").submit(function (e) {
                    //$('#newUserBox').modal('hide');
                    e.preventDefault();
                });

                $("#regForm").validate({
                    rules: {
                        //suppliercat: "required",
                    },
                    messages: {
                        //suppliercat: "Supplier Category is required",
                    },

                    errorPlacement: function (error, element) {
                        offset = element.offset();
                        error.insertAfter(element)
                        error.addClass('message');
                        error.css('display', 'block!important');
                        error.css('color', 'red');
                    },

                    submitHandler: function (form) {

                        $('#newUserBox').modal('hide');
                        var $form = $(form);
                        var formData = $form.serializeObject();

                        var method = "post";
                        var url = "/route/consulateVisaRequired/create";
                        console.log(formData.id);
                        if (formData.id != 0) {
                            url =
                                '/route/consulateVisaRequired/update/' +
                                formData.id;
                            method = "put";
                        }
                        $.ajax({
                            url: url,
                            type: method,
                            contentType: "application/json; charset=utf-8",
                            data: JSON.stringify(formData),
                            dataType: "json",

                            success: function (result) {
                                console.log("resultresultresult", result)
                                if (result.status) {
                                    notification({
                                        type: "success",
                                        message: result
                                            .msg
                                    });

                                    DrawTableInquiry.ajax
                                        .reload();
                                }
                            }
                        });
                    }
                });
            });

            function addNewUser() {
                $('#newUserBox').modal('show');
            }

            function populate(frm, data) {
                $.each(data, function (key, value) {
                    $('[name=' + key + ']', frm).val(value);
                });
                $('.sector').select2();
            }

            function getUser(id) {
                var id = id.getAttribute('data-id');
                $.ajax({
                    url: "/route/consulateVisaRequired/getData",
                    type: "get",
                    data: {
                        id: id
                    },
                    success: function (result) {

                        // var tranNO = '&nbsp;&nbsp;&nbsp;&nbsp;Tran No :- ' + result.data.tranNo;
                        // $("#topTranNo").html(tranNO);

                        var iddata = {
                            id: result.data._id
                        }
                        $.when($('#regForm').populate(result.data)).done(function (x) {

                        });



                        // ------
                        populate('#regForm', result.data);
                        populate('#regForm', iddata);

                        $('#newUserBox').modal('show');

                    }
                })
            }

            function openNav() {
                document.getElementById("mySidenav").style.width = "250px";
            }

            function closeNav() {
                document.getElementById("mySidenav").style.width = "0";
            }

           
        function addFields() {
