            var DrawTableInquiry;
            $(document).ready(function () {
                //getsuppliercat();

                var dataColumns = [{
                    data: "_id",
                    sTitle: "Id",
                    visible: false
                },

                {
                    data: "TOURCODE",
                    sTitle: "TOURCODE#",
                    visible: true,
                    className: "fs14--design column-12",

                },

                {
                    data: "TOURNAME",
